generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["boardwar"]
}

enum TerrainType {
  plain
  forest
  hill
  water
  city
  swamp
  road
  bridge
  ford

  @@schema("boardwar")
}

enum UnitName {
  light_infantry
  line_infantry
  guard_infantry
  light_cavalry
  dragon_cavalry
  heavy_cavalry
  twelve_pounder_cannon
  six_pounder_cannon
  howitzer_cannon

  @@schema("boardwar")
}

enum GamePhase {
  created
  deployment
  battle
  finished

  @@schema("boardwar")
}

enum GameStatus {
  not_started
  in_progress
  finished
  paused

  @@schema("boardwar")
}

enum GameActionType {
  MOVE
  ATTACK
  END_TURN

  @@schema("boardwar")
}

enum SnapshotKind {
  initial
  before_action
  after_action

  @@schema("boardwar")
}

enum BattleResult {
  win
  lose
  draw

  @@schema("boardwar")
}

model User {
  id           Int          @id
  email        String       @unique
  passwordHash String
  displayName  String
  createdAt    DateTime     @default(now())

  player Player @relation(fields: [id], references: [id])
  battles UserBattle[]

  @@schema("boardwar")
}

model Player {
  id        Int      @id @default(autoincrement())
  name      String
  color     String
  budget    Int      @default(1000)
  turn      Boolean  @default(true)
  createdAt DateTime @default(now())

  // jednostki gracza (armia)
  units Unit[]

  // gry w ktĂłrych jest graczem gĹ‚Ăłwnym lub wrogiem
  gamesAsPlayer Game[] @relation("playerGames")
  gamesAsEnemy  Game[] @relation("enemyGames")

  user User?

  @@schema("boardwar")
}

model Game {
  id        Int       @id @default(autoincrement())
  phase     GamePhase @default(created)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  status    GameStatus @default(not_started)
  stateJson Json?

  // dwĂłch graczy z Twojego interfejsu Game
  playerId Int
  player   Player @relation("playerGames", fields: [playerId], references: [id])

  enemyId Int
  enemy   Player @relation("enemyGames", fields: [enemyId], references: [id])

  units Unit[]

  // plansza gry
  board Board?

  actions GameAction[]
  snapshots GameStateSnapshot[]

  @@schema("boardwar")
}

model Board {
  id     Int  @id @default(autoincrement())
  width  Int  @default(30)
  height Int  @default(30)
  seed   Int? // jeĹ›li chcesz zapisaÄ‡ SEED z generatora mapy

  gameId Int  @unique
  game   Game @relation(fields: [gameId], references: [id])

  tiles Tile[]

  @@schema("boardwar")
}

model Tile {
  id Int @id @default(autoincrement())

  q Int
  r Int

  terrain      TerrainType
  passable     Boolean
  movementCost Int

  boardId Int
  board   Board @relation(fields: [boardId], references: [id])

  @@unique([boardId, q, r]) // jeden kafel na wspƈ�'rz�tdne
  @@schema("boardwar")
}

model Unit {
  id Int @id @default(autoincrement())

  // typ jednostki z UnitName w kodzie
  unitType UnitName
  name     String

  maxHp        Int
  meleeAttack  Int
  rangedAttack Int
  attackRange  Int
  defense      Int
  speed        Int
  cost         Int

  // Twoje uniqueId z GameUnit
  uniqueId Int @unique

  // HexCoords | null
  posQ Int?
  posR Int?

  playerId Int
  player   Player @relation(fields: [playerId], references: [id])

  gameId Int?
  game   Game? @relation(fields: [gameId], references: [id])

  @@index([playerId])
  @@index([gameId])
  @@schema("boardwar")
}

model GameAction {
  id         String         @id @default(uuid())
  gameId     Int
  game       Game           @relation(fields: [gameId], references: [id])
  turnNumber Int
  playerId   Int
  type       GameActionType
  payload    Json
  stateBefore Json?
  stateAfter  Json?
  rngRolls    Json?
  createdAt  DateTime       @default(now())

  @@schema("boardwar")
}

model UserBattle {
  id           Int           @id @default(autoincrement())
  userId       Int
  gameId       Int?
  result       BattleResult
  damageDealt  Int           @default(0)
  damageTaken  Int           @default(0)
  units        Json
  createdAt    DateTime      @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@schema("boardwar")
}

model GameStateSnapshot {
  id              Int           @id @default(autoincrement())
  gameId          Int
  game            Game          @relation(fields: [gameId], references: [id])
  turnNumber      Int
  status          GameStatus
  currentPlayerId Int
  availableActions Json?
  rngSeed         String?
  kind            SnapshotKind  @default(before_action)
  state           Json
  createdAt       DateTime      @default(now())

  @@index([gameId, turnNumber, kind])
  @@schema("boardwar")
}


